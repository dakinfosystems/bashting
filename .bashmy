#-------------------------------------------------------------------------------
# Proxy settings
#-------------------------------------------------------------------------------
user="pjain5"
password=""
if [ -f ~/.auth ]; then
    password=`cat ~/.auth`
fi
url="185.46.212.88"
port="80"

proxy_user="$user:$password"
proxy_server="$url:$port"

export http_proxy="http://$proxy_user@$proxy_server"
export https_proxy="http://$proxy_user@$proxy_server"
export ftp_proxy="http://$proxy_user@$proxy_server"

#-------------------------------------------------------------------------------
# Alias of commands to shorten them
#-------------------------------------------------------------------------------
alias em='emacs -nw'	# for emacs to run in no window mode

alias lal='ls -al'
alias lla='ls -al'
