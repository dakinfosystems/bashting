#--------------------------------------------------------------------------------
# Find out OS type
#--------------------------------------------------------------------------------
unameOut="$(uname -s)"
case "${unameOut}" in
    Linux*)     machine=Linux;;
    Darwin*)    machine=Mac;;
    CYGWIN*)    machine=Cygwin;;
    MINGW*)     machine=MinGw;;
    *)          machine="UNKNOWN:${unameOut}"
esac
#echo ${machine}

#-------------------------------------------------------------------------------
# Proxy settings
#-------------------------------------------------------------------------------
if [ -f $HOME/bashting/.proxy ]; then
   . $HOME/bashting/.proxy
fi

#-------------------------------------------------------------------------------
# Alias of commands to shorten them
#-------------------------------------------------------------------------------
alias em='emacs -nw'	# for emacs to run in no window mode

alias lal='ls -al'
alias lla='ls -al'
